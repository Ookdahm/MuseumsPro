<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/museum_background"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androidsfuture.museumspro.MainActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/museum_app_banner_nyc"
        android:scaleType="fitXY"
        android:clickable="true"/>
    <TableLayout
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_all"
                android:id="@+id/btnAll"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_art"
                android:id="@+id/btnArt"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_free"
                android:id="@+id/btnFree"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_history"
                android:id="@+id/btnHistory"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_houses"
                android:id="@+id/btnHouses"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>

            <Button

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/btn_name_science"
                android:id="@+id/btnScience"
                android:textColor="@color/ics_swatch_orange03"
                android:background="@drawable/button_state"
                android:layout_margin="2dp"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
